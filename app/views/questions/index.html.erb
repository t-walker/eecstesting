<h1>Test Questions</h1>
<table style = "color: black;" class="table">
  <tr>
    <th>Prompt</th>
    <th>Option 1</th>
    <th>Option 2</th>
    <th>Option 3</th>
    <th>Option 4</th>
    <th>Correct Answer</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @questions.each do |q| %>
    <tr>
      <td><%= q.prompt %></td>
      <% if q.possible1 %>
      <td><%= q.possible1 %></td>
      <% end %>
      <% if q.possible2 %>
      <td><%= q.possible2 %></td>
      <% end %>
      <% if q.possible3 %>
      <td><%= q.possible3 %></td>
      <% else %>
      <td></td>
      <% end %>
      <% if q.possible4 %>
      <td><%= q.possible4 %></td>
      <% else %>
      <td></td>
      <% end %>
      <% if q.correct %>
      <td><%= q.correct %></td>
      <% end %>
      <td><%= link_to "Edit", edit_question_path(q.id), style: "color: black;" %></td>
      <td><%= link_to "Delete", question_path(q.id), style: "color: black;", method: "delete" %></td>

    </tr>
  <% end %>
</table>
<button class="btn btn-default"><%= link_to "Create New Question", new_question_path, style: "color:black" %></button>

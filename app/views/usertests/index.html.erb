<div class="row">
  <div class="col-md-6">
    <h2>Test Versions</h2>
    <%= render partial: "testversions/index", locals: { testversions: @testversions }  %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h2>Test Submissions</h2>
    <table class="table" style="color:black;">
      <tr>
        <th>Student's Name</th>
        <th>Score</th>
        <th>Date Taken</th>
        <th>View Test</th>
      </tr>
    <% @usertests.each do |ut| %>
      <% @user = User.find_by_id(ut.user_id) %>
      <tr>
        <td><%= @user.firstname %> <%= @user.lastname %></td>
        <td><%= ut.score %></td>
        <td><%= ut.created_at.to_formatted_s(:long) %></td>
        <td><%= button_to "View Test", usertest_path(ut.id), class: "btn btn-default btn-block", method: :get %></td>
      </tr>
      <% end %>
    </table>
    <%= link_to 'Download as CSV', usertests_path(format: :csv) %>
  </div>
</div>
